<Window x:Class="Individueel_Project_Project.HoofdMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Individueel_Project_Project"
        mc:Ignorable="d"
        Title="HoofdMenu" Height="600" Width="800">
    <Grid>
        <Border Background="#31363d" CornerRadius="0">
            <StackPanel Margin="20">
                <Label Content="Maak je keuze" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtKeuze" Text=""  Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
                <Separator></Separator>
                <Button Name="btnDatabeheer" Content="Databeheer" Margin="60 10" Background="#545d6a" Foreground="White" Click="btnDatabeheer_Click"/>
                <Button Name="btnOverzicht" Content="Overzicht" Margin="60 10" Background="#545d6a" Foreground="White" Click="btnOverzicht_Click"/>
                <Button Name="btnBestelling" Content="Bestelling" Margin="60 10" Background="#545d6a" Foreground="White" Click="btnBestelling_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>